porsiaca css y js
js

function ActivarAlma(){
  if(despliegaAutoPermit) despliegaAutoPermit = false;
  var element = document.getElementById("iframeAlma");
  var style = document.defaultView.getComputedStyle(element, '');
  if(style.display != 'none'){
    document.getElementById("iframeAlma").style.display = 'none';
    document.getElementById("buttonContainer").style.display = 'block';
  }else{
    if(!existeDespligue){
      existeDespligue = true;
      var element = document.getElementById('notificacionAlma');
      element.parentNode.removeChild(element);
    }
    document.getElementById("iframeAlma").style.display = 'block';
    document.getElementById("buttonContainer").style.display = 'none';
  }
}
var despliegaAuto = -1;
var existeDespligue = false;
var permitirDespligue = false;
var cambiarNotificacion =  false;
var despliegaAutoPermit = true;
function readCookie(name) {

  var nameEQ = name + "=";
  var ca = document.cookie.split(';');

  for(var i=0;i < ca.length;i++) {

    var c = ca[i];
    while (c.charAt(0)==' ') c = c.substring(1,c.length);
    if (c.indexOf(nameEQ) == 0) {
      return decodeURIComponent( c.substring(nameEQ.length,c.length) );
    }

  }
  return null;
}

// Leemos la cookie
var miCookie = readCookie( "id" );
if(miCookie === null){
  var cadena = Math.floor(Math.random() * 900000000) + 100000000;
  document.cookie = "id="+cadena;
}

window.addEventListener("load", loadScript, false);
//window.onload=function() {
function loadScript(){
  if(miCookie === null) miCookie = cadena;
  var infoCliente = new Array();
  infoCliente[0] = miCookie;
  infoCliente[1] = location.href;
  var EjercicioBot = document.getElementById("iframeContainerAlma").contentWindow;
  EjercicioBot.postMessage(infoCliente, "https://assistant.almaintelligence.com:7777");
  var XHTTP  = new XMLHttpRequest();
  const usandoPromesas = (ruta) => {
    let promise = new Promise( (resolve, reject) => {
      XHTTP.onreadystatechange = (() => {
        if (XHTTP.readyState === 4)
        {
          (XHTTP.status === 200)
          ? resolve(JSON.parse(XHTTP.responseText))
          : reject(`Error al consultar => ${ruta}`);
        }
      });
      XHTTP.open("GET", ruta);
      XHTTP.send();
    });

    return promise;
  }
  usandoPromesas('https://board.almaintelligence.com/api/apiAlma/configuracionBot?idChatbot=' + document.getElementById("helper").getAttribute("data-idChatbot") + '&sesion=' + miCookie + '&idEmpresa=' + document.getElementById("helper").getAttribute("data-idEmpresa") )
  .then( data =>{
    if(data.nombreAsistente != null) document.getElementById("nombreAsistente").innerHTML = data.nombreAsistente;
    if(data.abrirAuto != null) despliegaAuto = data.abrirAuto * 1000 ;
    if(data.imagenAlma != null)  document.getElementById("fotoAvatar").src= "https://board.almaintelligence.com/images/configuracion/" + data.imagenAlma;
    if(data.tema != null){
      var elemento = document.getElementById("inferiorIframe");
      elemento.className += " " + data.tema;

      var notificacion = document.getElementById("notificacionAlma");
      notificacion.className += " " + data.tema;
    }
    if(data.existeConversacion){
      existeDespligue = true;
      var element = document.getElementById('notificacionAlma');
      element.parentNode.removeChild(element);
    }
    if(data.empresaActiva) permitirDespligue = true;
    if(data.posicionBoton != null){
      var elemento = document.getElementById("buttonContainer");
      elemento.className += " " + data.posicionBoton;
      if(data.posicionBoton == "botonCentrado"){
        document.getElementById("imgAlma").src= "https://assistant.almaintelligence.com:7777/stylesAndScripts/version2/img/botonIframeCentrado.png";
        var imgAlmaResize = document.getElementById("imgAlma");
        imgAlmaResize.className += " " + "imgAlmaCentrado";

        cambiarNotificacion = true;
      }
      if(data.posicionBoton == "botonIzquierda"){
        var elemento = document.getElementById("iframeAlma");
        elemento.className += " " + data.posicionBoton;
      }
    }

    var anchoWeb = window.matchMedia("(min-width: 500px)");
    if (anchoWeb.matches) {
      if(despliegaAuto != -1){
        setTimeout(abrirAuto, despliegaAuto);
      }
    }
  })
  .catch(error => console.error(error));

  setTimeout(function(){
    if(!permitirDespligue){
      document.getElementById('contenedorChatbot').removeChild(document.getElementById('iframeAlma'));
      document.getElementById('contenedorChatbot').removeChild(document.getElementById('buttonContainer'));
    }else{
      document.getElementById("buttonContainer").style.display = 'block';
    }
  }, 1000);

  if(cambiarNotificacion) document.getElementById("notificacionAlma").style.right = '27px';

  function abrirAuto(){
    if (despliegaAutoPermit) {
      var element = document.getElementById("iframeAlma");
      var style = document.defaultView.getComputedStyle(element, '');
      if(style.display == 'none'){
        if(!existeDespligue){
          existeDespligue = true;
          var element = document.getElementById('notificacionAlma');
          element.parentNode.removeChild(element);
        }
        document.getElementById("iframeAlma").style.display = 'block';
        document.getElementById("buttonContainer").style.display = 'none';

      }
    }
  }
}
